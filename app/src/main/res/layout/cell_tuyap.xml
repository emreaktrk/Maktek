<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prefered_listitem_extra_large_height_within_activity_space"
    android:padding="@dimen/activity_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:padding="@dimen/content_space">

        <akturk.maktek.view.RobotoCondensedBoldTextView
            android:id="@+id/cell_tuyap_name_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_location_normal" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_adress_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:id="@+id/cell_tuyap_phone_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/selector_call" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_phone_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_fax" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_fax_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:id="@+id/cell_tuyap_email_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/selector_mail" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_email_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:id="@+id/cell_tuyap_website_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/selector_website" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_website_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>