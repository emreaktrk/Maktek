<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prefered_listitem_large_height_within_activity_space"
    android:padding="@dimen/activity_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="@dimen/content_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.SquaredCircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cell_fair_hotels_hotel_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/activity_space"
                app:border_width="0dp"
                app:border_color="@android:color/transparent" />

            <akturk.maktek.view.RobotoCondensedBoldTextView
                android:id="@+id/cell_fair_hotels_name_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1" />

            <akturk.maktek.view.SquaredTextView
                android:id="@+id/cell_fair_hotels_star_textview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/ic_star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <akturk.maktek.view.SquaredImageView
                android:id="@+id/cell_fair_hotels_phone_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/selector_call" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_fair_hotels_phone_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <akturk.maktek.view.SquaredImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_location" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_fair_hotels_location_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <akturk.maktek.view.SquaredImageView
                android:id="@+id/cell_fair_hotels_website_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/selector_website" />

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_fair_hotels_website_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>