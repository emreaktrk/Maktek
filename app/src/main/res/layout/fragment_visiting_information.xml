<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_space"
        android:src="@drawable/image_visiting_information"
        app:border_width="2dp"
        app:border_color="@android:color/black"/>

    <akturk.maktek.view.RobotoCondensedBoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/content_space"
        android:text="@string/text_categories"/>

    <akturk.maktek.view.RobotoCondensedRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/content_space"
        android:text="@string/text_visiting_hours"/>
</LinearLayout>