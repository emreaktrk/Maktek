<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_divider_color"
    android:minWidth="320dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@color/semi_transparent_black_color"
            android:orientation="horizontal"
            android:padding="@dimen/content_space">

            <akturk.maktek.view.RobotoCondensedBoldTextView
                android:id="@+id/fragment_dialog_list_of_exhibitors_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/fragment_dialog_list_of_exhibitors_favourite_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <akturk.maktek.view.VerticallySquaredImageView
            android:id="@+id/fragment_dialog_list_of_exhibitors_phone_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/selector_call" />

        <akturk.maktek.view.RobotoCondensedRegularTextView
            android:id="@+id/fragment_dialog_list_of_exhibitors_phone_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <akturk.maktek.view.VerticallySquaredImageView
            android:id="@+id/fragment_dialog_list_of_exhibitors_website_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/selector_website" />

        <akturk.maktek.view.RobotoCondensedRegularTextView
            android:id="@+id/fragment_dialog_list_of_exhibitors_website_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>