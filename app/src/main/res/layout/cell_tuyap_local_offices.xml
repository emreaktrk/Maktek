<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="@dimen/activity_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:padding="@dimen/content_space">

        <akturk.maktek.view.RobotoCondensedBoldTextView
            android:id="@+id/cell_tuyap_local_offices_name_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_location_normal"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/darker_gray"/>

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_local_offices_adress_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:id="@+id/cell_tuyap_local_offices_phone_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/selector_call"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/darker_gray"/>

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_local_offices_phone_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_fax"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/darker_gray"/>

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_local_offices_fax_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <akturk.maktek.view.VerticallySquaredImageView
                android:id="@+id/cell_tuyap_local_offices_mail_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/selector_mail"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@android:color/darker_gray"/>

            <akturk.maktek.view.RobotoCondensedRegularTextView
                android:id="@+id/cell_tuyap_local_offices_email_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>