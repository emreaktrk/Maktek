<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_divider_color"
    android:minWidth="320dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dialog_list_of_exhibitors_backgroundview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:background="@android:color/holo_blue_dark">

        <CheckBox
            android:id="@+id/dialog_list_of_exhibitors_favourite_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/selector_favourite"
            android:button="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_space">

                <akturk.maktek.view.RobotoCondensedRegularTextView
                    android:id="@+id/dialog_list_of_exhibitors_saloon_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Saloon 14"/>

                <akturk.maktek.view.RobotoCondensedRegularTextView
                    android:id="@+id/dialog_list_of_exhibitors_stand_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Stand 10"/>
            </FrameLayout>

            <akturk.maktek.view.RobotoCondensedBoldTextView
                android:id="@+id/dialog_list_of_exhibitors_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/semi_transparent_black_color"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:padding="@dimen/content_space"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Lorem Ipsum Company Limited"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <akturk.maktek.view.VerticallySquaredImageView
            android:id="@+id/dialog_list_of_exhibitors_phone_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/selector_call"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"/>

        <akturk.maktek.view.RobotoCondensedRegularTextView
            android:id="@+id/dialog_list_of_exhibitors_phone_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="+90 212 123 45 67"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <akturk.maktek.view.VerticallySquaredImageView
            android:id="@+id/dialog_list_of_exhibitors_website_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/selector_website"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"/>

        <akturk.maktek.view.RobotoCondensedRegularTextView
            android:id="@+id/dialog_list_of_exhibitors_website_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="www.loremipsum.com"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <akturk.maktek.view.VerticallySquaredImageView
            android:id="@+id/dialog_list_of_exhibitors_location_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/selector_location"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:color/darker_gray"/>

        <akturk.maktek.view.RobotoCondensedRegularTextView
            android:id="@+id/dialog_list_of_exhibitors_location_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="Abc Street No 17 Atakoy Turkey"/>
    </LinearLayout>

    <akturk.maktek.view.RobotoCondensedRegularTextView
        android:id="@+id/dialog_list_of_exhibitors_category_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/content_space"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:background="@android:color/holo_blue_dark"
        tools:text="Others"/>
</LinearLayout>