<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prefered_listitem_extra_small_height_within_activity_space"
    android:clickable="true"
    android:padding="@dimen/activity_space">

    <LinearLayout
        android:id="@+id/cell_list_of_exhibitors_clickview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:padding="@dimen/content_space">

        <akturk.maktek.view.RobotoCondensedBoldTextView
            android:id="@+id/cell_list_of_exhibitors_name_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

    </LinearLayout>

</FrameLayout>